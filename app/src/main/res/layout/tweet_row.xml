<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".view.main.following.FollowFragment">

    <ImageView
        android:id="@+id/tweet_userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"/>

    <LinearLayout
        android:id="@+id/tweet_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/tweet_userImage"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tweet_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/sampleUserName"/>

        <TextView
            android:id="@+id/tweet_userAlias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/sampleAlias"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tweet_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_userImage"
        android:text="Message"
        tools:text="Message"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tweet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Message"
        tools:text="date"
        android:layout_margin="10dp"/>

</RelativeLayout>